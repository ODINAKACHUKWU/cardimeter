<div class="row d-flex justify-content-center">
  <div class="col-4">
    <h2 class="text-center mb-4">Create a poll</h2>
    <%= form_with(url: admin_polls_path, method: "post") do |f| %>
      <div class="form-group mb-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", autofocus: true, autocomplete: "title" %>
      </div>
      <div class="form-group mb-3">
        <%= f.label :company %><br />
        <%= collection_select(:poll, :company_id, Company.all, :id, :name, {prompt: "Select a company"}, {class: "form-control"}) %>
      </div>
      <div class="form-group mb-3">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
